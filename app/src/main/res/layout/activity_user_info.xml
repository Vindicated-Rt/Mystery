<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/userinfo_backgroud"
    tools:context=".activity.UserInfoActivity"
    android:fitsSystemWindows="true">

    <!--分割线-->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/userinfo_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:id="@+id/line"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ico4_email"
        app:layout_constraintBottom_toTopOf="@+id/ico5_blog"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:id="@+id/line2"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintBottom_toTopOf="parent"
        android:layout_marginTop="50dp"
        />


    <!-- 职位 -->



    <ImageView
        android:id="@+id/ico1_position"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_info_position"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintBottom_toTopOf="@+id/ico2_age"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_bias="0.1"
         />
    <TextView
        android:id="@+id/text1_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_occupation"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/ico1_position"
        app:layout_constraintRight_toLeftOf="@id/edt1_position"
        app:layout_constraintTop_toTopOf="@id/ico1_position"
        app:layout_constraintBottom_toBottomOf="@id/ico1_position"
        app:layout_constraintHorizontal_bias="0.05"/>
    <EditText
        android:id="@+id/edt1_position"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user_info_hint"
        android:background="@drawable/user_info_edit_border"
        app:layout_constraintLeft_toRightOf="@+id/text1_position"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ico1_position"
        app:layout_constraintBottom_toBottomOf="@id/ico1_position"
        />

    <!-- 年龄 -->
    <ImageView
        android:id="@+id/ico2_age"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_info_age"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ico1_position"
        app:layout_constraintBottom_toTopOf="@id/ico3_grade"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:id="@+id/text2_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_old"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/ico2_age"
        app:layout_constraintRight_toLeftOf="@id/edt2_age"
        app:layout_constraintTop_toTopOf="@id/ico2_age"
        app:layout_constraintBottom_toBottomOf="@id/ico2_age"
        app:layout_constraintHorizontal_bias="0.05"/>
    <EditText
        android:id="@+id/edt2_age"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user_info_hint"
        android:background="@drawable/user_info_edit_border"
        app:layout_constraintLeft_toRightOf="@+id/text2_age"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ico2_age"
        app:layout_constraintBottom_toBottomOf="@id/ico2_age"
        />
    <!-- 邮箱 -->



    <ImageView
        android:id="@+id/ico4_email"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_info_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ico3_grade"
        app:layout_constraintBottom_toTopOf="@id/line"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/text4_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_email"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/ico4_email"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@+id/ico4_email"
        app:layout_constraintRight_toLeftOf="@id/edt4_email"
        app:layout_constraintTop_toTopOf="@id/ico4_email" />
    <EditText
        android:id="@+id/edt4_email"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user_info_hint"
        android:background="@drawable/user_info_edit_border"
        app:layout_constraintLeft_toRightOf="@+id/text4_email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ico4_email"
        app:layout_constraintBottom_toBottomOf="@id/ico4_email"
        />

    <!-- 年级 -->
    <ImageView
        android:id="@+id/ico3_grade"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_info_grade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ico2_age"
        app:layout_constraintBottom_toTopOf="@id/ico4_email"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:id="@+id/text3_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_grade"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/ico3_grade"
        app:layout_constraintRight_toLeftOf="@id/edt3_grade"
        app:layout_constraintTop_toTopOf="@id/ico3_grade"
        app:layout_constraintBottom_toBottomOf="@id/ico3_grade"
        app:layout_constraintHorizontal_bias="0.05"/>
    <EditText
        android:id="@+id/edt3_grade"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user_info_hint"
        android:background="@drawable/user_info_edit_border"
        app:layout_constraintLeft_toRightOf="@+id/text3_grade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ico3_grade"
        app:layout_constraintBottom_toBottomOf="@id/ico3_grade"
        />
    <!-- 博客 -->
    <ImageView
        android:id="@+id/ico5_blog"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_info_blog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintBottom_toTopOf="@id/ico6_station"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:id="@+id/text5_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_blog"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/ico5_blog"
        app:layout_constraintRight_toLeftOf="@id/edt5_blog"
        app:layout_constraintTop_toTopOf="@id/ico5_blog"
        app:layout_constraintBottom_toBottomOf="@id/ico5_blog"
        app:layout_constraintHorizontal_bias="0.05"/>
    <EditText
        android:id="@+id/edt5_blog"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user_info_hint"
        android:background="@drawable/user_info_edit_border"
        app:layout_constraintLeft_toRightOf="@+id/text5_blog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ico5_blog"
        app:layout_constraintBottom_toBottomOf="@id/ico5_blog"
        />
    <!-- 岗位 -->
    <ImageView
        android:id="@+id/ico6_station"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_info_position2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ico5_blog"
        app:layout_constraintBottom_toTopOf="@id/ico7_experience"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/text6_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_job"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/ico6_station"
        app:layout_constraintRight_toLeftOf="@id/edt6_station"
        app:layout_constraintTop_toTopOf="@id/ico6_station"
        app:layout_constraintBottom_toBottomOf="@id/ico6_station"
        app:layout_constraintHorizontal_bias="0.05"/>
    <EditText
        android:id="@+id/edt6_station"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user_info_hint"
        android:background="@drawable/user_info_edit_border"
        app:layout_constraintLeft_toRightOf="@+id/text6_station"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ico6_station"
        app:layout_constraintBottom_toBottomOf="@id/ico6_station"
        />

    <!-- 经历 -->
    <ImageView
        android:id="@+id/ico7_experience"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_info_experience"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ico6_station"
        app:layout_constraintBottom_toTopOf="@id/text7_experience"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:id="@+id/text7_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_info_experience"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/text6_station"
        app:layout_constraintRight_toRightOf="@id/text6_station"
        app:layout_constraintTop_toTopOf="@id/ico7_experience"
        app:layout_constraintBottom_toBottomOf="@id/ico7_experience"
        app:layout_constraintHorizontal_bias="0.05"/>
    <EditText
        android:id="@+id/edt7_experience"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/user_info_hint"
        android:gravity="left|top"
        android:background="@drawable/user_info_edit_border"
        app:layout_constraintLeft_toLeftOf="@+id/ico7_experience"
        app:layout_constraintRight_toRightOf="@+id/edt1_position"
        app:layout_constraintTop_toBottomOf="@id/ico7_experience"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        />

    <ImageButton
        android:id="@+id/userinfo_return"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_back"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintRight_toLeftOf="@id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:background="@android:color/transparent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>